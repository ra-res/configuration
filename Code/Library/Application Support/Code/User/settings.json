{
  // "java.format.settings.url": "~/.vscode/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",
  // ERRORLENS
  "errorLens.messageTemplate": "▪ $message",
  "errorLens.margin": "2ch",
  "errorLens.messageBackgroundMode": "none",
  "vim.easymotion": true,
  "vim.leader": ",",
  // VIM
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "j"],
      "after": ["<ESC>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // Switching between window
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    //  Tab switching
    {
      "before": ["t", "n"],
      "commands": [":tabnew"]
    },
    {
      "before": ["t", "k"],
      "commands": [":tabnext"]
    },
    {
      "before": ["t", "j"],
      "commands": [":tabprev"]
    },
    {
      "before": ["<Leader>", "t", "o"],
      "commands": [":tabo"]
    },
    {
      "before": ["t", "x"],
      "commands": [":tabclose"]
    },
    // Split window easlier
    {
      "before": ["v", "s"],
      "commands": [":vs"]
    },
    {
      "before": ["s", "p"],
      "commands": [":sp"]
    },
    // LSP
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "r"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["g", "l"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.previous"]
    },
    // Format document
    {
      "before": ["<Leader>", "p"],
      "commands": ["editor.action.formatDocument"]
    }
  ],

  // LSP
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",

