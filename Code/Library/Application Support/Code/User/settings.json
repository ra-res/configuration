{
  // antlr4
  "antlr4.generation": {
    "mode": "none"
  },
  "java.format.settings.profile": "GoogleStyle",
  // ERRORLENS
  "errorLens.messageTemplate": "â–ª $message",
  "errorLens.margin": "2ch",
  "errorLens.messageBackgroundMode": "none",
  "vim.easymotion": true,
  "vim.leader": ",",
  // VIM
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "j"],
      "after": ["<ESC>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // Switching between window
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    //  Tab switching
    {
      "before": ["t", "n"],
      "commands": [":tabnew"]
    },
    {
      "before": ["t", "k"],
      "commands": [":tabnext"]
    },
    {
      "before": ["t", "j"],
      "commands": [":tabprev"]
    },
    {
      "before": ["<Leader>", "t", "o"],
      "commands": [":tabo"]
    },
    {
      "before": ["t", "x"],
      "commands": [":tabclose"]
    },
    // Split window easier
    {
      "before": ["v", "s"],
      "commands": [":vs"]
    },
    {
      "before": ["s", "p"],
      "commands": [":sp"]
    },
    // LSP
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "r"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["g", "l"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.previous"]
    },
    // Format document
    {
      "before": ["<Leader>", "p"],
      "commands": ["editor.action.formatDocument"]
    }
  ],

  "editor.fontSize": 20,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.lineNumbers": "relative",
  "files.autoSave": "afterDelay",

  // LSP
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },
  "editor.fontFamily": "PT Mono",
  "editor.lineHeight": 1.35,
  "editor.guides.indentation": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "prettier.quoteProps": "preserve",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Default Dark+ Experimental",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    },
    {
      "name": "latexmk (latexmkrc)",
      "tools": [
        "latexmk_rconly"
      ]
    },
    {
      "name": "latexmk (lualatex)",
      "tools": [
        "lualatexmk"
      ]
    },
    {
      "name": "latexmk (xelatex)",
      "tools": [
        "xelatexmk"
      ]
    },
    {
      "name": "pdflatex -> bibtex -> pdflatex * 2",
      "tools": [
        "pdflatex",
        "bibtex",
        "pdflatex",
        "pdflatex"
      ]
    },
    {
      "name": "Compile Rnw files",
      "tools": [
        "rnw2tex",
        "latexmk"
      ]
    },
    {
      "name": "Compile Jnw files",
      "tools": [
        "jnw2tex",
        "latexmk"
      ]
    },
    {
      "name": "Compile Pnw files",
      "tools": [
        "pnw2tex",
        "latexmk"
      ]
    },
    {
      "name": "tectonic",
      "tools": [
        "tectonic"
      ]
    }
  ],
  "editor.wordWrap": "off",
  "window.zoomLevel": -1,
}

