{
  // "java.format.settings.url": "~/.vscode/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",
  // ERRORLENS
  "errorLens.messageTemplate": "▪ $message",
  "errorLens.margin": "2ch",
  "errorLens.messageBackgroundMode": "none",
  "vim.easymotion": true,
  "vim.leader": ",",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // VIM
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "j"],
      "after": ["<ESC>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // Switching between window
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
    //  Tab switching
    {
      "before": ["t", "n"],
      "commands": [":tabnew"]
    },
    {
      "before": ["t", "k"],
      "commands": [":tabnext"]
    },
    {
      "before": ["t", "j"],
      "commands": [":tabprev"]
    },
    {
      "before": ["<Leader>", "t", "o"],
      "commands": [":tabo"]
    },
    {
      "before": ["t", "x"],
      "commands": [":tabclose"]
    },
    // Split window easlier
    {
      "before": ["v", "s"],
      "commands": [":vs"]
    },
    {
      "before": ["s", "p"],
      "commands": [":sp"]
    },
    // Telescope
    {
      "before": ["<Leader>", "f", "h"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<Leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<Leader>", "f", "g"],
      "commands": ["workbench.action.terminal.searchWorkspace"]
    },
    {
      "before": ["<Leader>", "f", "z"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    // LSP
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "r"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["g", "l"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.previous"]
    },
    {
      "before": ["<Leader>", "r", "n"],
      "commands": ["workbench.action.rename"]
    },
    {
      "before": ["<Leader>", "x", "x"],
      "commands": ["workbench.actions.view.problems"]
    },
    // Format document
    {
      "before": ["<Leader>", "p"],
      "commands": ["editor.action.formatDocument"]
    }
  ],

  // LSP
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",

  //
  // STLYES
  //
  // "window.titleBarStyle": "custom",

  // WORKBENCH
  // "workbench.tree.indent": 4,
  "workbench.editor.showTabs": true,
  "workbench.list.smoothScrolling": true,
  "workbench.statusBar.visible": false,
  "workbench.colorCustomizations": {
    "focusBorder": "#ff000000",
    "scrollbar.shadow": "#ffffff00",
    // "widget.shadow": "#ffffff00",
    // "list.activeSelectionBackground": "#10101000",
    // "list.inactiveSelectionBackground": "#10101000",
    // "list.inactiveSelectionForeground": "#1DF3FC",
    // "sideBar.border": "#ffffff28",
    "editorCursor.foreground": "#DEC0E9",
    // "workbench.statusBar.visible": false,
    // "workbench.editor.showTabs": false,
    "workbench.list.smoothScrolling": true,
    "scrollbarSlider.background": "#0000001a",
    // "minimapSlider.background": "#0000001a",
    "scrollbarSlider.hoverBackground": "#00000028",
    // "minimapSlider.hoverBackground": "#00000028",
    "scrollbarSlider.activeBackground": "#00000028",
    // "minimapSlider.activeBackground": "#00000028",
    // "minimap.errorHighlight": "#ff0000",
    // "minimap.selectionHighlight": "#090909a3",
    // "editor.lineHighlightBorder": "#DEC0E9",
    // "editorOverviewRuler.background": "#161618",
    // "terminal.background": "#161618",
    // "peekViewEditor.background": "#161618",
    // "peekView.border": "#ffffff28",
    // "peekViewEditor.matchHighlightBorder": "#12131500",
    // "peekViewEditor.matchHighlightBackground": "#12131500",
    // "peekViewResult.background": "#161618",
    // "peekViewResult.selectionForeground": "#161618",
    // "peekViewResult.fileForeground": "#161618",
    // "peekViewResult.selectionBackground": "#161618",
    // "peekViewResult.matchHighlightBackground": "#12131500",
    // "peekViewResult.lineForeground": "#ffffff7b",
    // "peekViewTitle.background": "#121315",
    // "peekViewEditorGutter.background": "#161618",
    "editorOverviewRuler.border": "#12131500",
},
  "editor.minimap.enabled": false,
  "editor.fontWeight": "bold",
  "editor.accessibilitySupport": "off",
  "editor.autoClosingBrackets": "always",
  "editor.padding.top": 5,
  "editor.inlineSuggest.enabled": true,
  "editor.scrollbar.verticalScrollbarSize": 12,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.cursorSmoothCaretAnimation": true,
  // "editor.minimap.scale": 1,
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  // "editor.minimap.renderCharacters": false,
  "editor.lineHeight": 1.3,
  "editor.scrollBeyondLastLine": false,
  "editor.renderWhitespace": "none",
  "editor.smoothScrolling": true,
  "editor.rulers": [],
  "editor.lineNumbers": "relative",
  "editor.renderLineHighlight": "none",
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 2,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": false,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.guides.indentation": false,
  "editor.guides.highlightActiveBracketPair": false,
  // "editor.unicodeHighlight.allowedCharacters": {
  //   "ˆ": true,
  // },
  "editor.fontFamily": "JetBrains Mono",
  "files.autoSave": "afterDelay",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "window.zoomLevel": 1,
  "editor.wordWrap": "off",
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },
}
